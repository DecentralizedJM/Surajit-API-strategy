# ====================================
# Mudrex Supertrend Trading Bot
# Environment Configuration
# ====================================

# ----------------------------------
# Mudrex API Configuration (Required)
# ----------------------------------
MUDREX_API_SECRET=your-mudrex-api-secret-here

# ----------------------------------
# Telegram Notifications (Optional)
# ----------------------------------
# Get bot token from @BotFather, chat_id from @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional: Override base URL if needed
# MUDREX_BASE_URL=https://api.mudrex.com

# Request timeout in seconds
MUDREX_TIMEOUT=30

# Enable rate limiting (recommended)
MUDREX_RATE_LIMIT=true

# Max retries for failed requests
MUDREX_MAX_RETRIES=3

# ----------------------------------
# Trading Configuration
# ----------------------------------

# Comma-separated list of trading symbols
TRADING_SYMBOLS=BTCUSDT,ETHUSDT

# Leverage to use (1-125 depending on asset)
TRADING_LEVERAGE=5

# Margin type (ISOLATED recommended)
TRADING_MARGIN_TYPE=ISOLATED

# OHLCV timeframe (1m, 5m, 15m, 1h, 4h, 1d)
TRADING_TIMEFRAME=5m

# Number of candles to fetch
TRADING_LOOKBACK_PERIODS=100

# Minimum balance to trade (USDT)
TRADING_MIN_BALANCE=10.0

# Maximum concurrent positions
TRADING_MAX_POSITIONS=3

# Dry run mode (true = no real trades)
TRADING_DRY_RUN=true

# ----------------------------------
# Strategy Parameters
# ----------------------------------

# Supertrend ATR period
STRATEGY_ATR_PERIOD=10

# Supertrend factor/multiplier
STRATEGY_FACTOR=3.0

# Risk ATR length (for stop loss)
STRATEGY_RISK_ATR_LEN=14

# Risk ATR multiplier
STRATEGY_RISK_ATR_MULT=2.0

# Trailing Stop Loss ATR length
STRATEGY_TSL_ATR_LEN=14

# Trailing Stop Loss multiplier
STRATEGY_TSL_MULT=2.0

# Take Profit Risk:Reward ratio
STRATEGY_TP_RR=2.0

# Position size as percentage of balance (0.01 = 1%)
STRATEGY_POSITION_SIZE_PCT=0.15

# ----------------------------------
# CCXT Configuration (Price Data)
# ----------------------------------

# Exchange for price data
CCXT_EXCHANGE=binance

# Use testnet/sandbox
CCXT_SANDBOX=false

# Optional: API credentials for private endpoints
# CCXT_API_KEY=
# CCXT_API_SECRET=

# ----------------------------------
# AWS Configuration
# ----------------------------------

# AWS Region
AWS_REGION=us-east-1

# S3 bucket for state storage
AWS_STATE_BUCKET=your-bucket-name

# S3 key for state file
AWS_STATE_KEY=supertrend-bot/state.json

# Secrets Manager secret name (optional)
# If set, secrets will be loaded from here
# AWS_SECRETS_NAME=supertrend-bot/secrets

# Lambda function name
AWS_FUNCTION_NAME=supertrend-mudrex-bot

# EventBridge schedule expression
AWS_SCHEDULE=rate(5 minutes)
